<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        # Lista de vendedores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None
                spacing: 4, 4
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        # ---------- BOTÃO VOLTAR ----------
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                # Essa é a posição em relação ao o últime FloatLayout, e não com relação ao primeiro
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage", "right")