<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        # ---------- SELECIONAR CLIENTE ----------
        Label:
            id: label_selecione_cliente
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o cliente"
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        # ---------- SELECIONAR PRODUTO ----------
        Label:
            id: label_selecione_produto
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o produto"
        ScrollView:
            pos_hint: {"right": 1, "top": 0.70}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        Label:
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            id: id_label_data
            bold: True
            text: "Data: 23/04/2024"

        # ---------- SELECIONAR UNIDADE ----------
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                id: unidades_kg
                text: "Kg"
                on_release: app.selecionar_unidade("unidades_kg")
            LabelButton:
                id: unidades_unidades
                text: "Unidades"
                on_release: app.selecionar_unidade("unidades_unidades")
            LabelButton:
                id: unidades_litro
                text: "Litros"
                on_release: app.selecionar_unidade("unidades_litro")


        # ---------- CANCELAR ----------
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.45, "top": 0.2}
            size_hint: 0.4, 0.2
            text: "Cancelar"
            bold: True
            on_release: app.mudar_tela("homepage", "left")

        # ---------- ADICIONAR VENDA ----------
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.95, "top": 0.2}
            size_hint: 0.4, 0.2
            text: "Adicionar Venda  "
            bold: True
            on_release: app.adicionar_venda()

        # ---------- PREÇO TOTAL ----------
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                id: label_preco_total
                text: "Preço Total (R$)"
            TextInput:
                id: preco_total
                hint_text: "Apenas números"

        # ---------- QUANTIDADE ----------
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                id: label_quantidade
                text: "Quantidade Total"
            TextInput:
                id: quantidade_total
                hint_text: "0"

